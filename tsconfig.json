{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "dom"],
    "module": "node16",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./",
    "emitDeclarationOnly": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "nodenext",
    "paths": {
      "lib0/*": ["./*"],
      "lib0/webcrypto": ["./webcrypto.browser.js"],
      "lib0/performance": ["./performance.node.js"],
      "lib0/logging": ["./logging.node.js"]
    }
  },
  "include": ["./*.js", "./crypto/*.js", "./bin/*.js"],
  "exclude": ["./dist"]
}
